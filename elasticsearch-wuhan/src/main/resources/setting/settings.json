{
  "settings" : {
    "index.number_of_shards":3,
    "index.number_of_replicas":2,
    "index.refresh_interval":"30s",
    "analysis" : {
      "analyzer" : {
        "pinyin_analyzer" : {
          "tokenizer" : "ik_smart",
          "filter":["my_pinyin"]
        }
      },
      "filter": {
        "my_pinyin" : {
          "type" : "pinyin",
          "keep_first_letter":true,
          "keep_separate_first_letter" : true,
          "keep_full_pinyin" : true,
          "keep_original" : false,
          "limit_first_letter_length" : 16,
          "lowercase" : true
        }
      }
    }
  }
}